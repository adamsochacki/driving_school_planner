<h4><%= link_to 'Add a lesson', new_instructorlesson_path %></h4></br>
<h4>Confirmed lessons</h4>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Student's name and surname</th>
      <th>Student's email</th>
      <th>Date of a lesson</th>
    </tr>
  </thead>
  <tbody>
  <% @confirmed_lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.student.full_name %></td>
      <td><%= lesson.student.email %></td>
      <td><%= lesson.lesson_time.strftime('%d.%m.%Y %H:%M') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<h4> Unconfirmed lessons </h4>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Student's name and surname</th>
      <th>Student's email</th>
      <th>Date of a lesson</th>
      <th>Confirm a lesson:</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @unconfirmed_lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.student.full_name %></td>
      <td><%= lesson.student.email %></td>
      <td><%= lesson.lesson_time.strftime('%d.%m.%Y %H:%M') %></td>
      <td><%= link_to 'Confirm', instructorlesson_path(:confirmed => true, id: lesson.id), method: :patch, data: { confirm: "Confirmed lessons can't be delete. Are you sure?"}  %></td>
      <td><%= link_to 'Delete', instructorlesson_path(lesson), method: :delete, data: { confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>