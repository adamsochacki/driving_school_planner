<%= link_to 'Dodanie lekcji', new_lesson_path %></br>

<table border="1">
    <tr>
      <th>Data lekcji</th>
      <th>Czy lekcja jest potwierdzona?</th>
      <th>Edycja</th>
      <th>Usunięcie</th>
    </tr>
  <% @lessons.each do |lesson| %>
    <tr>

      <td><%= lesson.lesson_time %></td>
      <td><%= lesson.confirmed %></td>
      <td><%= link_to 'Edytuj', edit_lesson_path(lesson)  %></td>
      <td><%= link_to 'Usuń', lesson_path(lesson), method: :delete, data: { confirm: "Czy na pewno usunąć?"} %></td>
    </tr>
  <% end %>
</table>