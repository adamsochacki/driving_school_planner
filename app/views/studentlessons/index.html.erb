<h4><%= link_to 'Dodanie lekcji', new_studentlesson_path %></br></h4>
<h4> Lekcje potwierdzone </h4>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Imię i nazwisko instruktora</th>
      <th>E-mail instruktora</th>
      <th>Data lekcji</th>
    </tr>
  </thead>
  <tbody>
  <% @confirmed_lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.instructor.full_name %></td>
      <td><%= lesson.instructor.email %></td>
      <td><%= lesson.lesson_time.strftime('%d-%m-%Y %H:%M') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<h4> Lekcje niepotwierdzone </h4>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Imię i nazwisko instruktora</th>
      <th>E-mail instruktora</th>
      <th>Data lekcji</th>
      <th>Usunięcie</th>
    </tr>
  </thead>
  <tbody>
  <% @unconfirmed_lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.instructor.full_name %></td>
      <td><%= lesson.instructor.email %></td>
      <td><%= lesson.lesson_time.strftime('%d-%m-%Y %H:%M') %></td>
      <td><%= link_to 'Usuń', studentlesson_path(lesson), method: :delete, data: { confirm: "Czy na pewno usunąć?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>