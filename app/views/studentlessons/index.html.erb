<h4><%= link_to 'Add a lesson', new_studentlesson_path %></br></h4>
<h4> Confirmed lessons </h4>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name and surname of an instructor</th>
      <th>Instructor's email</th>
      <th>Date of a lesson</th>
    </tr>
  </thead>
  <tbody>
  <% @confirmed_lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.instructor.full_name %></td>
      <td><%= lesson.instructor.email %></td>
      <td><%= lesson.lesson_time.strftime('%d-%m-%Y %H:%M') %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<h4> Unconfirmed lessons</h4>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name and surname of an instructor</th>
      <th>Instructor's email</th>
      <th>Date of a lesson</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
  <% @unconfirmed_lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.instructor.full_name %></td>
      <td><%= lesson.instructor.email %></td>
      <td><%= lesson.lesson_time.strftime('%d-%m-%Y %H:%M') %></td>
      <td><%= link_to 'Delete', studentlesson_path(lesson), method: :delete, data: { confirm: "Are you sure?"} %></td>
    </tr>
  <% end %>
  </tbody>
</table>