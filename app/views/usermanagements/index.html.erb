<%= link_to 'Dodanie użytkownika', new_usermanagement_path %></br>

<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Imię i nazwisko</th>
      <th>Email</th>
      <th>Instruktor?</th>
      <th>Edycja</th>
      <th>Usunięcie</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= user.is_an_instructor %></td>
        <td><%= link_to 'Edytuj', edit_usermanagement_path(user)  %></td>
        <td><%= link_to 'Usuń', user_path(user), method: :delete, data: { confirm: "Czy na pewno usunąć?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>