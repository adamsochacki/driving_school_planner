<%= link_to 'Create an user', new_usermanagement_path %></br>
<h4>Students</h4>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name and surname</th>
      <th>Email</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.full_name %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Delete', usermanagement_path(user), method: :delete, data: { confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h4>Instructors</h4>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name and surname</th>
      <th>Email</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.full_name %></td>
        <td><%= instructor.email %></td>
        <td><%= link_to 'Delete', usermanagement_path(instructor), method: :delete, data: { confirm: "Are you sure?"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<h4>Confirmed lessons</h4>
<table class="table table-striped table-hover ">
  <thead>
    <tr>
      <th>Name and surname of an instructor</th>
      <th>Name and surname of a student</th>
      <th>Date of a lesson</th>
    </tr>
  </thead>
  <tbody>
  <% @lessons.each do |lesson| %>
    <tr>
      <td><%= lesson.student.full_name %></td>
      <td><%= lesson.instructor.full_name %></td>
      <td><%= lesson.lesson_time.strftime('%d.%m.%Y %H:%M') %></td>
    </tr>
  <% end %>
  </tbody>
</table>